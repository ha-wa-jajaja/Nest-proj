generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  firebaseUid String   @id @map("firebase_uid") // Firebase User ID as primary key
  email       String   @unique
  name        String?
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("users")
}
